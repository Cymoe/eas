    alignItems: 'center',
    backgroundColor: 'rgba(18, 18, 18, 0.48)',
  },
  modalContainer: {
    width: '100%',
    height: '100%',
    padding: 10,
    paddingBottom: 50,
    justifyContent: 'flex-end',
    alignItems: 'center',
  },
  modalCard: {
    width: '100%',
    padding: 16,
    paddingBottom: 12,
    backgroundColor: 'rgba(18, 18, 18, 0.8)',
    borderRadius: 12,
    gap: 16,
  },
  title: {
    fontFamily: 'Poppins',
    fontWeight: '600',
    fontSize: 16,
    lineHeight: 19,
    letterSpacing: -0.5,
    color: '#FFFFFF',
  },
  description: {
    fontFamily: 'Poppins',
